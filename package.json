{
  "name": "shopify-webhooks-server",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rm -rf ./dist && tsc --project . && copyfiles *.json ./dist",
    "start": "npm run build && node ./dist/index.js",
    "build:prod": "tsc --project . && copyfiles *.json ./dist",
    "start:prod": "node ./dist/index.js",
    "generate": "graphql-codegen --config .graphqlrc.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "4.18.1",
    "node-fetch": "^3.3.2",
    "oauth-1.0a": "^2.2.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@shopify/api-codegen-preset": "^1.0.1",
    "@shopify/graphql-codegen": "^0.1.0",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.14",
    "@types/node": "16.11.64",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "tsx": "^4.7.0",
    "typescript": "4.8.4"
  }
}